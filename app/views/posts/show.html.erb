<article class="post">
  <section class="post-head">
    <h1><%= @post.title %></h1>
    <small>
      <time><%= @post.created_at.to_date.strftime("%d %B, %Y") %></time>
      |
      <% if user_signed_in? && current_user.admin? %>
        <%= link_to "Изменить", edit_admin_post_path(@post) %>
        |
        <%= link_to "Удалить", admin_post_path(@post), method: :delete, data: { confirm: 'Удалить статью?'} %>
      <% end %>
    </small>
  </section>

  <section class="post-body">
    <%= image_tag @post.image.url(:large), class: 'img-show' if @post.image? %>
    <%= @post.body %>
  </section>

  <p><%= @random_posts %></p>

</article>
